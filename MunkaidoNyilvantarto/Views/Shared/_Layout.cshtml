<!DOCTYPE html>
<html ng-app="munkaidoNyilvantarto">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        var issueStates = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Enum.GetNames(typeof(MunkaidoNyilvantarto.Data.Entity.IssueState))));
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#/" class="navbar-brand">Munkaidő nyilvántartó</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/projects">Projektek</a></li>
                    <li><a href="#/Analytics/GetAllSpentTimeByProject">Összes idő projektenkét</a></li>
                    <li><a href="#/Analytics/ProjectSpentTimesByIssues">Projekt idők feladatonként</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-controller="userBarCtrl">
                    <li ng-if="currentUser" class="navbar-text">
                        Üdv {{currentUser.userName}}!
                    </li>
                    <li ng-if="!currentUser"><a href="#/login">Bejelentkezés</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
